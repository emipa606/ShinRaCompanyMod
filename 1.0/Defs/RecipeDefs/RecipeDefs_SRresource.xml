  <RecipeDef>
    <defName>MAKsteelCraft</defName>
    <label>Make MakSteel Ingots </label>
    <description>Make x5 MakSteel Ingots</description>
    <jobString>Making Maksteel Ingots</jobString>
    <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>5000</workAmount>
    <workSkill>Crafting</workSkill>
    <products>
      <MakSteelRe>5</MakSteelRe>
    </products>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SolidMako</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>Makobarrel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
    <researchPrerequisite>Shinra_MakSteel</researchPrerequisite>
    <skillRequirements>
      <Crafting>6</Crafting>
    </skillRequirements>
  </RecipeDef>
  <RecipeDef>
