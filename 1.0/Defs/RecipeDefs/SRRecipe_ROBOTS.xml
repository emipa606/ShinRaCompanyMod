<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RecipeDef>
    <defName>MakeRobotHG</defName>
    <label>Craft Heli Gunner</label>
    <description>Create the parts needed to assembly a working Heli Gunner Security Bot (WARNING: SAVE BEFORE ASSEMBLING THE ROBOT, GAME MAY RARELY CRASH).</description>
    <jobString>Crafting Robot.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Repair</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>4000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MakSteelRe</li>
          </thingDefs>
        </filter>
        <count>75</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MakSteelRe</li>
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Robot_HeligunnerParts>1</Robot_HeligunnerParts>
    </products>
    <recipeUsers>
      <li>SRrobotWorkbench</li>
    </recipeUsers>
    <researchPrerequisite>Shinra_robotics1</researchPrerequisite>
  </RecipeDef>
